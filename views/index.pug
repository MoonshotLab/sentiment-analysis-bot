extends layout.pug

block content
  div#wrapper
    section#page-status-wrap
      pre
        p#video-status Video Status
        p#audio-status Audio Status
    section#video-analysis-wrap
      h4 Video Emotions Analysis
      div#video-emotions-chart-wrap
    section#camera-wrap
      //- h4 Camera
      div#camera-root
    section#bot-text-wrap
      h4#bot-text
    section#user-text-wrap
      h4#user-text
    section#text-analysis-wrap
      h4 Text Sentiment Analysis
      div#text-sentiment-chart-wrap
  div#video-wrap
    video(src='/video/screensaver.mp4', loop)

block footer_scripts
  script(src='/js/lib/jquery.min.js')
  script(src='https://download.affectiva.com/js/3.2/affdex.js')
  script(src='/js/lib/p5.min.js')
  script(src='/js/lib/p5.dom.min.js')
  script(src='/js/main.bundle.js')
